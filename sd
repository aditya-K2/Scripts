#!/bin/sh

choice=$(printf "Shutdown\nReboot" | dmenu -i -p "Are you sure?")

if [ "$choice" = "Shutdown" ]; then
	shutdown=$(printf "Yes\nNo" | dmenu -i -p "Are you sure you want to Shutdown?")
	if [ "$shutdown" = "Yes" ]; then
		poweroff
	fi
elif [ "$choice" = "Reboot" ]; then
	shutdown=$(printf "Yes\nNo" | dmenu -i -p "Are you sure you want to Reboot?")
	if [ "$shutdown" = "Yes" ]; then
		reboot
	fi
fi


